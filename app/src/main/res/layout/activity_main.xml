<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/chonfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="choose file"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageImv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/progress"
        android:layout_below="@id/textEdt"
        android:layout_marginTop="16dp" />


    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/uploadBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/textEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/chonfileBtn"
        android:hint="enter file name" />

    <Button
        android:id="@+id/uploadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        android:text="UPLOAD"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/showimageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/uploadBtn"
        android:layout_alignBottom="@id/uploadBtn"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/uploadBtn"
        android:gravity="center"
        android:hint="show image"
        android:textSize="15sp" />

</RelativeLayout>